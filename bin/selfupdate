#!/bin/bash

if [ -d ~/.0 ]; then
  cd ~/.0 && git pull
fi

if [ -f /usr/local/bin/brew ]; then
  /usr/local/bin/brew update && /usr/local/bin/brew upgrade --cleanup
fi

if [ -f /usr/local/bin/composer ]; then
  /usr/local/bin/composer self-update && /usr/local/bin/composer clear-cache
fi

if [ -f /usr/local/bin/apm ]; then
  /usr/local/bin/apm update -c=0
fi
