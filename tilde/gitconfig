[user]
    name = dotzero
    email = mail@dotzero.ru
    signingkey = AAE042B1

[core]
    autocrlf = input
    safecrlf = true
    editor = subl -w
    pager = less -R
    excludesfile = /Users/dotzero/.gitignore_global

[apply]
    whitespace = nowarn

[diff]
    tool = sourcetree

[merge]
    tool = sourcetree

[difftool "sourcetree"]
    cmd = opendiff \"$LOCAL\" \"$REMOTE\"
    path =

[mergetool "sourcetree"]
    cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
    trustExitCode = true

[color]
    ui = true
    diff = true
    status = true
    branch = true

    [color "branch"]
        current = yellow reverse
        local = yellow
        remote = green

    [color "diff"]
        meta = normal
        frag = magenta bold
        old = red bold
        new = blue bold
        whitespace = red reverse

    [color "status"]
        added = yellow
        changed = green
        untracked = cyan

[alias]
    co = checkout
    ci = commit
    st = status
    br = branch
    unadd = reset HEAD --
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    type = cat-file -t
    dump = cat-file -p
    ignore = "!gi() { curl -L -s https://www.gitignore.io/api/$@ ;}; gi"

[push]
  default = simple
